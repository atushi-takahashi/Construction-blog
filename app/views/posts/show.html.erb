<div class="row pshow border border-dark">
  <div class="col-lg-11">
    <div class="row">
      <div class="col-lg-1 pshow__status"><%= @post.status %></div>
      <div class="col-lg-3 pshow__user">
      <%= link_to user_path(@post.user_id) do %>
        <span class="pshow__user_image"><%= attachment_image_tag @post.user, :image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %></span>
        <span class="pshow__user_name ml-2"><%= @post.user.name %></span>
      <% end %>
      </div>
      <div class="col-lg-4 pshow__category">カテゴリ：<%= @post.category.name %></div>
      <div class="col-lg-4 pshow__like"><%= render partial: 'posts/post_like', post: @post %></div>
    </div>
  </div>
  <div class="col-lg-11 pshow__title text-center">
    <%= @post.title %>
  </div>
  <div class="col-lg-4 pshow__image">
    <%= attachment_image_tag @post, :image, :fill, 300, 200, fallback: "no_image.jpg", size: "300x200" %>
  </div>
  <div class="col-lg-6 pshow__body">
    <div><%= @post.body %></div>
    <div class="text-right">投稿日時：<%= @post.updated_at.to_s(:datetime_jp) %></div>
  </div>
  <div class="col-lg-11">
    <% (1..3).each do %>
    <div class="row">
      <div class="col-lg-3">
        <div class="pshow__cuser">アイコン：ユーザー名</div>
        <div class="pshow__cdelete">削除</div>
      </div>
      <div class="col-lg-8">コメント、右下コメント日時</div>
    </div>
    <% end %>
  </div>
  <% if @post.user_id == current_user.id %>
  <div class="col-lg-11">
    <%= link_to "投稿を編集する", edit_post_path(@post), class:"col-lg-3 btn btn-primary" %>
    <%= link_to "投稿を削除する", post_path(@post), method: :delete, data: {confirm: ('本当に削除してよろしいですか？')}, class:"col-lg-3 btn btn-danger" %>
  </div>
  <% end %>
</div>