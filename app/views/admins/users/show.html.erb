<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-3">
        <%= attachment_image_tag @user, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200" %>
      </div>
      <div class="col-lg-3">
        <div class="row">
          <div class="col-lg-7"><%= @user.name %></div>
          <div class="col-lg-12">
            <%= form_with model: @user, url: admins_user_path(@user), method: :patch, local: true do |f|%>
            <% if @user.withdrawal_status == false %>  
            <%= f.hidden_field :withdrawal_status, value: 'true' %>
            <%= f.submit "アカウントを凍結させる", class: 'btn btn-danger btn-block' %>
            <% elsif @user.withdrawal_status == true %>
            <%= f.hidden_field :withdrawal_status, value: 'false' %>
            <%= f.submit "アカウントの凍結を解除する", class: 'btn btn-info btn-block' %>
            <% end %>
            <% end %>
            
          </div>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="row">
          <div class="col-lg-4"><%= @user.occupation %></div>
          <div class="col-lg-4"><%= @user.work_history %></div>
        </div>
        <h5>自己紹介</h5>
        <div class="col-lg-12"><%= @user.profile %></div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="row">
      <button type="button" class="col-lg-4 btn btn-secondary btn-lg">これまでの投稿</button>
      <button type="button" class="col-lg-4 btn btn-secondary btn-lg">これまでの質問</button>
      <button type="button" class="col-lg-4 btn btn-secondary btn-lg">いいねした記事</button>
    </div>
  </div>
  <%= render 'shared/timeline' %>
</div>