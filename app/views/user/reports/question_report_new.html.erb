<%= form_with model: [@question,@report], url: question_report_create_path, method: :post, local: true do |f| %>
<div class="row border border-dark">
<h3 class="col-lg-12 mt-4 text-center"><span class="border border-dark">　通報フォーム　</span></h3>
  <div class="col-lg-11 form-group">
    <div class="row">
      <div class="col-lg-11">
        <%=@question.user.name %>さんの<%= @question.title %>の記事に対する通報
      </div>
      <div class="col-lg-11">
        <%= f.label :カテゴリ %>
          <%= f.select :category, Report.categories .keys, {} , class: "btn btn-warning dropdown-toggle" %>
      </div>
      <div class="col-lg-11">
        <%= f.label :message %>
        <%= f.text_area :message, rows: 10, class: 'form-control' %>
      </div>
      <div class="col-lg-11">
        <%= f.submit "通報する", class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </div>
</div>
<% end %>