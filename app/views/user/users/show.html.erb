<div class="row">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-3">
        <%= attachment_image_tag @user, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200" %>
      </div>
      <div class="col-lg-3">
        <div class="row">
          <div class="col-lg-7"><%= @user.name %></div>
          <% if @user.id == current_user.id %>
          <div class="col-lg-4">
            <%= link_to "編集", edit_user_path(@user), class:"btn btn-primary" %>
          </div>
          <% end %>
          <% unless @user == current_user %>
          <div class="col-lg-12" id="follow_botton_#{<%= @user.id %>}">
            <%= render "follow_botton" %>
          </div>
          <% end %>
          <div class="col-lg-12" id="following-count_#{<%= @user.id %>}">
            <%= link_to "フォロー#{ @user.follower.count }人", user_following_path(@user.id) %>
          </div>
          <div class="col-lg-12" id="follower-count_#{<%= @user.id %>}">
            <%= link_to "フォロワー#{ @user.followed.count }人", user_follower_path(@user.id) %>
          </div>
          <div class="col-lg-12">
            <% if @user.id == current_user.id %>
              <%= link_to "ダイレクトメッセージ", rooms_path, class:"btn-sm btn-success" %>
            <% else %>
              <% if (current_user.following? @user) && (@user.following? current_user) %>
                <% if @is_room == true %>
                  <%= link_to "ダイレクトメッセージ", room_path(@room_id), class:"btn-sm btn-success" %>
                <% else %>
                  <%= form_with model:@room, url: rooms_path, local: true do |f| %>
                    <%= fields_for @user_room do |user_room| %>
                      <%= user_room.hidden_field :user_id, value: @user.id %>
                    <% end %>
                    <%= f.submit "ダイレクトメッセージ", class: 'btn-sm btn-success' %>
                  <% end %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-lg-5">
        <div class="row">
          <div class="col-lg-4"><%= @user.occupation %></div>
          <div class="col-lg-4"><%= @user.work_history %></div>
        </div>
        <h5>自己紹介</h5>
        <div class="col-lg-12"><%= @user.profile %></div>
      </div>
    </div>
  </div>
  <div class="col-lg-12">
    <div class="row">
      <button type="button" class="col-lg-4 btn btn-secondary btn-lg">これまでの投稿</button>
      <button type="button" class="col-lg-4 btn btn-secondary btn-lg">これまでの質問</button>
      <button type="button" class="col-lg-4 btn btn-secondary btn-lg">いいねした記事</button>
    </div>
  </div>
  <%= render 'shared/timeline' %>
</div>