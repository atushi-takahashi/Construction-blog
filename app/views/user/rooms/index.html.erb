<div class="row dm">
  <div class="dm__title col-lg-3 col-md-4 col-6">ダイレクトメッセージ</div>
  <% @another_user_rooms.each do |user_room| %>
  <div class="col-lg-12 col-md-12 col-12">
    <div class="dm__box row">
      <div class="col-lg-3 col-md-3 col-10">
        <div class="dm__user_box row">
          <div class="dm__user col-lg-12 col-md-12 col-3">
            <%= attachment_image_tag user_room.user, :image, :fill, 50, 50, fallback: "no_image_user.jpg", size: "50x50" %>
          </div>
          <div class="dm__user col-lg-12 col-md-12 col-9">
            <%= link_to "#{user_room.user.name}",user_path(user_room.user) %>
          </div>
        </div>
      </div>
      <div class="col-lg-8 col-md-8">
        <div class="dm__message_box">
          <%= DirectMessage.find_by(id: user_room.room.direct_message_ids.last)&.message %>
        </div>
      </div>
      <div class="dm__link col-lg-1 col-md-1 col-2">
        <%= link_to "DM", room_path(user_room.room.id), class:"btn-sm btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
