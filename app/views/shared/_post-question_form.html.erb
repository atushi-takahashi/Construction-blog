<div class="col-lg-7 form-group">
  <div class="row">
    <div class="col-lg-11">
      <%= f.label :カテゴリ %>
        <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: "-- 選択してください --"}, {class: "form-control"}) %>
    </div>
    <div class="col-lg-11">
    <%= f.label :tite %>
    <%= f.text_field :title, class: 'form-control'  %>
    </div>
    <div class="col-lg-11">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 10, class: 'form-control' %>
    </div>
  </div>
</div>