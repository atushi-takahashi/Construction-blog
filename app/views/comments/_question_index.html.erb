<!-- コメント内容(２件) ------------------------------------------------------------------>
<%= comments.count %>件コメント
<h6 class="more" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">もっと見る....</h6>
<% comments.first(2).each do |comment| %>
  <% unless comment.id.nil? %>
    <li class="comment-container">
        <div class="comment-box">
            <div class="comment-avatar">
                <%= attachment_image_tag comment.user, :image, fallback: "no_image.jpg", class:"comment-image", size: "40x40" %>
            </div>
            <div class="comment-text">
                <p><%= link_to "@#{comment.user.name}", user_path(comment.user.id) %></p>
                <div class="comment-entry">
                    <%= comment.message %>
                    <% if comment.user_id == current_user.id %>
                        <%= link_to question_destroy_comment_path(comment.question_id, comment.id), method: :delete, remote: true, class: "comment_destroy" do %>
                            <i class="fas fa-trash" style="color: black;">削除する</i>
                        <% end %>
                    <% end %>
                </div>
                <span class="comment-date pull-right">
                      <%= comment.created_at.to_s(:datetime_jp) %>
                </span>
            </div>
        </div>
    </li>
  <% end %>
<% end %>
