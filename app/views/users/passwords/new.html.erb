<div class="container-login">
  <h1><%= t('.forgot_your_password') %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
  
  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "ログイン", user_session_path, class: 'btn btn-primary btn-block mb-4' %>
    <%= link_to "新規登録はこちら", new_user_registration_path, class: 'btn btn-info btn-block mb-4' %>
  </div>
</div>