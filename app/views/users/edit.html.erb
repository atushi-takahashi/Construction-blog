<div class="container-login">
  <h1>プロフィール編集</h1>
  
  <%= form_with model:@user, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :image %>
      <%= f.attachment_field :image, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :occupation %>
      <%= f.text_field :occupation, class: 'form-control'  %>
    </div>
  
    <div class="form-group">
      <%= f.label :work_history %>
      <%= f.text_field :work_history, class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :profile %>
      <%= f.text_area :profile, rows: 10 ,class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.submit "更新する", class: 'btn btn-primary btn-block mb-4' %>
    </div>
  <% end %>
  
  <hr class="devise-link my-5">
  <div class="form-group">
    <%= link_to "マイページ", user_path(@user), class: 'btn btn-info btn-block mb-4' %>
  </div>
</div